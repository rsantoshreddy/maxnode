block content
     main
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title Great Book
                        .card__image
                            img(src="https://assets.entrepreneur.com/content/3x2/2000/20191219170611-GettyImages-1152794789.jpeg?width=700&crop=2:1", alt="Book")
