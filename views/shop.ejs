<%- include('includes/head.ejs') %>
  </head>
  <body>
    <%- include('includes/header.ejs') %>
    <main>
      <% if(prods.length) {%>
      <h1>My Products</h1>
      <% for(var key in prods) { %>
      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title"><%=prods[key].title %></h1>
        </header>
        <div class="card__image">
          <img
            src="https://assets.entrepreneur.com/content/3x2/2000/20191219170611-GettyImages-1152794789.jpeg?width=700&crop=2:1"
            alt="Book"
          />
          <div class="card__content">
            <h2 class="product__price">$19.99</h2>
            <p class="product__description">A very interesting book</p>
          </div>
          <div class="card__actions">
            <button class="btn">Add to Cart</button>
          </div>
        </div>
      </article>
      <% } %>
      <% }else {%>
      <h1>No Products</h1>
      <% }%>
    </main>
  </body>
</html>
